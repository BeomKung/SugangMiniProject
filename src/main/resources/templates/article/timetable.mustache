<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>나의 시간표</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
          background-color: #f8f9fa;
        }


        table.table th,
        table.table td {
          min-width: 110px;
          height: 70px;
          vertical-align: middle;
        }
        .subject-cell {
          background-color: #e6f2ff;
          border-radius: 8px;
          padding: 6px 10px;
          font-weight: 600;
          font-size: 0.95rem;
          box-shadow: 0 1px 4px rgba(0,0,0,0.05);
        }
        .subject-time {
          font-size: 0.8rem;
          color: #555;
        }
    </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/student/dashboard">My Page</a>
        <div class="collapse navbar-collapse">
            <div class="ms-auto d-flex">
                <a href="/student/profile" class="btn btn-primary me-2">돌아가기</a>
                <a href="/login" class="btn btn-danger">로그아웃</a>
            </div>
        </div>
    </div>
</nav>

<!-- Main Title -->
<h2 class="text-center mt-5 mb-4" style="color: #4a90e2; font-weight: bold;">나의 시간표</h2>

<!-- Time Table -->
<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow-lg w-auto">
        <div class="card-body table-responsive">
            <table class="table table-bordered text-center align-middle mb-0">
                <thead class="table-light">
                <tr>
                    <th>시간</th>
                    <th>월</th>
                    <th>화</th>
                    <th>수</th>
                    <th>목</th>
                    <th>금</th>
                </tr>
                </thead>
                <tbody>
                {{#timeSlots}}
                    <tr>
                        <th>{{time}}</th>

                        <!-- 월 -->
                        <td>
                            {{#mon}}
                                <div class="subject-cell">
                                    {{subjectName}}<br>
                                    <span class="subject-time">{{startTime}} ~ {{endTime}}</span>
                                </div>
                            {{/mon}}
                            {{^mon}}<span class="text-muted">-</span>{{/mon}}
                        </td>

                        <!-- 화 -->
                        <td>
                            {{#tue}}
                                <div class="subject-cell">
                                    {{subjectName}}<br>
                                    <span class="subject-time">{{startTime}} ~ {{endTime}}</span>
                                </div>
                            {{/tue}}
                            {{^tue}}<span class="text-muted">-</span>{{/tue}}
                        </td>

                        <!-- 수 -->
                        <td>
                            {{#wed}}
                                <div class="subject-cell">
                                    {{subjectName}}<br>
                                    <span class="subject-time">{{startTime}} ~ {{endTime}}</span>
                                </div>
                            {{/wed}}
                            {{^wed}}<span class="text-muted">-</span>{{/wed}}
                        </td>

                        <!-- 목 -->
                        <td>
                            {{#thu}}
                                <div class="subject-cell">
                                    {{subjectName}}<br>
                                    <span class="subject-time">{{startTime}} ~ {{endTime}}</span>
                                </div>
                            {{/thu}}
                            {{^thu}}<span class="text-muted">-</span>{{/thu}}
                        </td>

                        <!-- 금 -->
                        <td>
                            {{#fri}}
                                <div class="subject-cell">
                                    {{subjectName}}<br>
                                    <span class="subject-time">{{startTime}} ~ {{endTime}}</span>
                                </div>
                            {{/fri}}
                            {{^fri}}<span class="text-muted">-</span>{{/fri}}
                        </td>

                    </tr>
                {{/timeSlots}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
