<div class="container mt-3">
    <h2 class="text-center mb-4" style="color: #4a90e2; font-weight: bold;">수강신청</h2>

    <!-- 필터 -->
    <div class="row mb-4">
        <div class="col-md-3">
            <select class="form-select">
                <option value="" disabled selected hidden>이수구분 선택</option>
                <option value="전공">전공</option>
                <option value="교양">교양</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select">
                <option value="" disabled selected hidden>학과 선택</option>
                <option value="영어영문학과">영어영문학과</option>
                <option value="컴퓨터공학과">컴퓨터공학과</option>
                <option value="디자인학과">디자인학과</option>
                <option value="교양학부">교양학부</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select" required>
                <option value="" disabled selected hidden>학년 선택</option>
                <option value="1">1학년</option>
                <option value="2">2학년</option>
                <option value="3">3학년</option>
                <option value="4">4학년</option>
                <option value="M">석사과정</option>
                <option value="D">박사과정</option>
            </select>
        </div>
        <div class="col-md-3">
            <button class="btn btn-primary w-100">검색</button>
        </div>
    </div>

    <!-- 강의 목록 -->
    <table class="table table-hover text-center align-middle">
        <thead class="table-light">
        <tr>
            <th>이수구분</th>
            <th>개설학과</th>
            <th>학년</th>
            <th>강좌번호</th>
            <th>과목코드</th>
            <th>과목명</th>
            <th>교수명</th>
            <th>스케줄</th>
            <th>학점</th>
            <th>신청</th>
        </tr>
        </thead>
        <tbody>
        {{#subjects}}
            <tr>
                <td>{{courseType}}</td>
                <td>{{department}}</td>
                <td>{{grade}}</td>
                <td>{{lectureCode}}</td>
                <td>{{subjectCode}}</td>
                <td>{{subjectName}}</td>
                <td>{{professor}}</td>
                <td>{{schedule}}</td>
                <td>{{credit}}</td>
                <td><button class="btn btn-outline-success btn-sm">신청</button></td>
            </tr>
        {{/subjects}}
        </tbody>
    </table>
</div>

{{> layouts/footer}}
<script>

    const grade = "{{student.grade}}";

  const gradeText = /^[1-4]$/.test(grade) ? grade + "학년" : grade;
  document.getElementById("grade").innerText = " " + gradeText;

</script>