<div class="container mt-3">
    <h2 class="text-center mb-4" style="color: #4a90e2; font-weight: bold;">수강신청</h2>

    <!-- 필터 -->
    <div class="row mb-4">
        <div class="col-md-3">
            <select class="form-select">
                <option value="" disabled selected hidden>이수구분 선택</option>
                <option value="전공(필수)">전공(필수)</option>
                <option value="전공(선택)">전공(선택)</option>
                <option value="교양(필수)">교양(필수)</option>
                <option value="교양(선택)">교양(선택)</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select">
                <option value="" disabled selected hidden>학과 선택</option>
                <option value="영어영문학과">영어영문학과</option>
                <option value="컴퓨터공학과">컴퓨터공학과</option>
                <option value="디자인학과">디자인학과</option>
                <option value="교양학부">교양학부</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select" required>
                <option value="" disabled selected hidden>학년 선택</option>
                <option value="1">1학년</option>
                <option value="2">2학년</option>
                <option value="3">3학년</option>
                <option value="4">4학년</option>
                <option value="M">석사과정</option>
                <option value="D">박사과정</option>
            </select>
        </div>
        <div class="col-md-3">
            <button class="btn btn-primary w-100">검색</button>
        </div>
    </div>

    <!-- 강의 목록 -->
    <table class="table table-hover text-center align-middle">
        <thead class="table-light">
        <tr>
            <th>이수구분</th>
            <th>개설학과</th>
            <th>학년</th>
            <th>과목코드</th>
            <th>과목명</th>
            <th>교수명</th>
            <th>요일</th>
            <th>시작시간</th>
            <th>종료시간</th>
            <th>학점</th>
            <th>정원</th>
            <th>수강 인원</th>
            <th>강의계획서</th>
            <th>강의 개요</th>
            <th>신청</th>
        </tr>
        </thead>
        <tbody>
        {{#subjectViews}}
            <tr>
                <td>{{subject.courseType}}</td>
                <td>{{subject.department}}</td>
                <td>{{subject.grade}}</td>
                <td>{{subject.subjectCode}}</td>
                <td>{{subject.subjectName}}</td>
                <td>{{subject.professor}}</td>
                <td>{{subject.weekday}}</td>
                <td>{{subject.startTime}}</td>
                <td>{{subject.endTime}}</td>
                <td>{{subject.credit}}</td>
                <td>{{subject.capacity}}</td>
                <td>현재 강의를 신청한 사람의 수 / {{capacity}}</td>
                <td>
                    <a href="/강의계획서 다운로드 테스트.txt" download>강의계획서 다운로드</a>
                </td>
                <td>
                    <a href="/강의계획서 다운로드 테스트.txt" download>강의계획서 다운로드</a>
                </td>
                <td style="max-width: 150px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; cursor: pointer;"
                    data-bs-toggle="modal" data-bs-target="#lectureModal" data-content="이 자리에 강의 개요의 내용이 들어가면 됨">
                    강의 개요
                </td>
                <td>
                    {{#enrolled}}
                        <button type="button" class="btn btn-secondary btn-sm" disabled>신청 완료</button>
                    {{/enrolled}}
                    {{^enrolled}}
                        <form method="post" action="/student/enroll">
                            <input type="hidden" name="subjectId" value="{{subject.id}}">
                            <button type="submit" class="btn btn-outline-success btn-sm">신청</button>
                        </form>
                    {{/enrolled}}
                </td>
            </tr>
        {{/subjectViews}}
        </tbody>
    </table>
</div>

<div class="modal fade" id="lectureModal" tabindex="-1" aria-labelledby="lectureModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lectureModalLabel">강의 개요</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="닫기"></button>
            </div>
            <div class="modal-body">
                이 자리에 강의 개요의 내용이 들어감
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
            </div>
        </div>
    </div>
</div>

<td>
    <button class="btn btn-outline-secondary btn-sm" disabled>마감</button>
</td>
{{> layouts/footer}}
<script>

    const grade = "{{student.grade}}";

  const gradeText = /^[1-4]$/.test(grade) ? grade + "학년" : grade;
  document.getElementById("grade").innerText = " " + gradeText;

</script>