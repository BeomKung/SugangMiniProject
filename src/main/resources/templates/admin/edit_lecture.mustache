<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>강의 수정</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<div class="container mt-5">
    <h2 class="mb-4">강의 정보 수정</h2>
    {{#subjects}}
        <form method="post" action="/admin/lecture/edit/{{id}}">
            <input type="hidden" id="id" name="id" value="{{id}}">

            <div class="mb-3">
                <label for="courseType" class="form-label">이수구분</label>
                <select class="form-select" id="courseType" name="courseType">
                    <option value="전공(필수)">전공(필수)</option>
                    <option value="전공(선택)">전공(선택)</option>
                    <option value="교양(필수)">교양(필수)</option>
                    <option value="교양(선택)">교양(선택)</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="department" class="form-label">학과</label>
                <select class="form-select" id="department" name="department">
                    <option value="영어영문학과">영어영문학과</option>
                    <option value="컴퓨터공학과">컴퓨터공학과</option>
                    <option value="디자인학과">디자인학과</option>
                    <option value="교양학부">교양학부</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="grade" class="form-label">학년</label>
                <select class="form-select" id="grade" name="grade">
                    <option value="1">1학년</option>
                    <option value="2">2학년</option>
                    <option value="3">3학년</option>
                    <option value="4">4학년</option>
                    <option value="M">석사과정</option>
                    <option value="D">박사과정</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="subjectCode" class="form-label">과목코드</label>
                <input type="text" class="form-control" id="subjectCode" name="subjectCode" value="{{subjectCode}}">
            </div>

            <div class="mb-3">
                <label for="subjectName" class="form-label">과목명</label>
                <input type="text" class="form-control" id="subjectName" name="subjectName" value="{{subjectName}}">
            </div>

            <div class="mb-3">
                <label for="professor" class="form-label">교수명</label>
                <input type="text" class="form-control" id="professor" name="professor" value="{{professor}}">
            </div>

            <div class="mb-3">
                <label for="weekday" class="form-label">요일</label>
                <select class="form-select" id="weekday" name="weekday">
                    <option value="월">월</option>
                    <option value="화">화</option>
                    <option value="수">수</option>
                    <option value="목">목</option>
                    <option value="금">금</option>
                    <option value="토">토</option>
                    <option value="일">일</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="startTime" class="form-label">시작시간</label>
                <select class="form-select" name="startTime">
                    <option value="09:00">09:00</option>
                    <option value="10:00">10:00</option>
                    <option value="11:00">11:00</option>
                    <option value="13:00">13:00</option>
                    <option value="14:00">14:00</option>
                    <option value="15:00">15:00</option>
                    <option value="16:00">16:00</option>
                    <option value="17:00">17:00</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="endTime" class="form-label">종료시간</label>
                <select class="form-select" name="endTime">
                    <option value="09:50">09:50</option>
                    <option value="10:50">10:50</option>
                    <option value="11:50">11:50</option>
                    <option value="13:50">13:50</option>
                    <option value="14:50">14:50</option>
                    <option value="15:50">15:50</option>
                    <option value="16:50">16:50</option>
                    <option value="17:50">17:50</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="credit" class="form-label">학점</label>
                <select class="form-select" id="credit" name="credit">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="capacity" class="form-label">정원</label>
                <input type="text" class="form-control" id="capacity" name="capacity" value="{{capacity}}">
            </div>

            <button type="submit" class="btn btn-primary">수정 완료</button>
            <a href="/admin/lecture_index" class="btn btn-secondary">취소</a>
        </form>

        <!-- select 값 자동 선택을 위한 JavaScript -->
        <script>
        document.getElementById('courseType').value = "{{courseType}}";
        document.getElementById('department').value = "{{department}}";
        document.getElementById('grade').value = "{{grade}}";
        document.getElementById('weekday').value = "{{weekday}}";
        document.getElementById('startTime').value = "{{startTime}}";
        document.getElementById('endTime').value = "{{endTime}}";
        document.getElementById('credit').value = "{{credit}}";

        </script>
    {{/subjects}}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
