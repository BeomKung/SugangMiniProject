<h1>학생 목록</h1>

<div class="d-flex justify-content-end gap-2 mb-3">
    <a href="/admin/add_student" class="btn btn-outline-success">학생 등록</a>
    <a href="/admin/dashboard" class="btn btn-outline-danger">관리자 페이지 돌아가기</a>
</div>


<table class="table table-bordered">
    <thead>
    <tr>
        <th>학번</th>
        <th>이름</th>
        <th>이메일</th>
        <th>전공</th>
        <th>학년</th>
        <th>관리</th>
    </tr>
    </thead>
    <tbody>
    {{#students}}
        <tr>
            <td>{{studentNumber}}</td>
            <td>{{name}}</td>
            <td>{{email}}</td>
            <td>{{major}}</td>
            <td>{{grade}}</td>
            <td>
                <a href="/admin/student/edit/{{id}}" class="btn btn-sm btn-warning">수정</a>
                <form method="post" action="/admin/student/delete/{{id}}" style="display:inline;">
                    <button type="submit" class="btn btn-sm btn-danger">삭제</button>
                </form>
            </td>
        </tr>
    {{/students}}
    </tbody>
</table>


